<div class="row" style=" gap: 20px;  margin-left: 20px; justify-content: center;">
{{#each products}}

  <div class="products card col-sm-6" >
  <div class="image_container">
    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="image">
      <img src="/images/{{this._id}}.jpg" class="card-img-top" alt="no image" />
    </svg>
  </div>
  <div class="title">
    <span>{{this.name}}</span>
    <p class="card-text">{{this.description}}</p>
    <p>{{this.category}}</p>
  </div>
    <div class="action">
    <div class="price">
      <span>â‚¹{{this.price}}</span>
    </div>
    <button class="cart-button" onclick="addtoCart('{{this._id}}')">
      <svg
        class="cart-icon"
        stroke="currentColor"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
          stroke-linejoin="round"
          stroke-linecap="round"
        ></path>
      </svg>
      <span>Add to cart</span>
    </button>
  </div>
</div>



{{/each}}

</div>
<script>
 function addtoCart(productId){
  console.log(productId);
  
    $.ajax({
      url: "/add-to-cart", // Replace with your server-side script URL
      type: "POST",
      data:{
        productId
      },
      dataType: "json", // Expect JSON response from server
      success: function(response) {
        console.log(response);
        
        document.getElementById('count').innerText=response
      },
      error: function(jqXHR, textStatus, errorThrown) {
        $("#message").html("Error: " + textStatus + " - " + errorThrown);
      }
    });

 }
  
</script>

